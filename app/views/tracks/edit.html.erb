<h1>Edit Track: <%= @track.title %></h1>
<form action="<%= track_url(@track) %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="track[album_id]" value="<%= @track.album.id %>">
  <input  name="track[title]" placeholder="Track Title" value="<%= @track.title %>"> <br />
  <label for="track[bonus_track]">Bonus Track?</label> <br />
  <input type="radio" name="track[bonus_track]" value="true" <%= "checked" if @track.bonus_track %>>Yes
  <input type="radio" name="track[bonus_track]" value="false" "checked" unless @track.bonus_track>No <br />
  <label for="track[lyrics]">Lyrics</label> <br />
    <textarea name="track[lyrics]" rows="8" cols="40"><%= @track.lyrics %></textarea>
  <button>Submit</button>
</form>
