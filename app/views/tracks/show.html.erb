<h1><%= @track.title %></h1>
<h3>Album: <%= link_to @track.album.title, album_url(@track.album) %></h3>
<% if @track.bonus_track %>
  <p>
    Bonus Track!
  </p>
<% end %>

<h3>Lyrics</h3>
<p>
  <%= ugly_lyrics(@track.lyrics) %>
</p>
<%= link_to "Edit Track", edit_track_url(@track) %>
<%= link_to "Delete Track", track_url(@track), method: :delete %>
<h3>Notes</h3>
<%= render 'notes/form' %>
<% @track.notes.each do |note| %>
  <%= render 'notes/note'  , note: note%>
<% end %>
